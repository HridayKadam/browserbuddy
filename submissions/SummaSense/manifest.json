{
  "manifest_version": 3,
  "name": "SummaSense",
  "version": "1.0",
  "description": "Summarize text from any webpage.",
  "permissions": ["activeTab", "scripting","sidePanel"],
  "host_permissions": ["<all_urls>"],
  "side_panel": {
        "default_path": "index.html"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "background": {
    "service_worker": "background.js"
  }
}