{
  "manifest_version": 3,
  "name": "Focus Mode",
  "version": "1.0",
  "description": "Temporarily hide distracting websites to improve focus",
  "permissions": ["storage", "tabs", "webNavigation"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
