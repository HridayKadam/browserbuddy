{
  "name": "djlaer-hsext",
  "private": true,
  "version": "0.3.1",
  "type": "module",
  "scripts": {
    "build": "extension build --polyfill --zip",
    "build-ff": "extension build --polyfill --browser firefox --zip",
    "dev": "extension dev --polyfill --chromium-binary=$(which chromium)",
